<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EighthActivity">

    <ImageView
        android:id="@+id/thaliimage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/rolls" />

    <ImageView
        android:id="@+id/pureveg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="425dp"
        android:src="@drawable/veg_icon" />
    <TextView
        android:id="@+id/tv8"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_marginLeft="49dp"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/fooddetails"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/button3"
        android:text="VEGROLLS                                â‚¹25"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cartbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="610dp"
        android:background="@drawable/cart_round"
        android:text="ADD TO CART" />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="425dp"
        android:clickable="false"
        android:numStars="5"
        android:progressTint="#D84315"
        android:rating="3.5" />

    <Button
        android:id="@+id/confirmbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="670dp"
        android:background="@drawable/round2"
        android:text="ORDER" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_marginLeft="325dp"
        android:layout_height="21dp"
        android:background="@color/teal_200"
        android:src="@drawable/next" />
    <ImageView
        android:id="@+id/cross"
        android:layout_width="45dp"
        android:layout_height="21dp"
        android:src="@drawable/cross" />



</RelativeLayout>